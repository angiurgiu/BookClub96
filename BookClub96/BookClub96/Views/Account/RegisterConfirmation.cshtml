@model RegisterViewModel
@{
    ViewBag.Title = "Registration Successful!";
}
@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
<div class="row align-items-center">
    <div class="col">
        <div class="col-md-4 offset-md-4">
            <h4>Your registration was successful, @Model.UserName. A confirmation email will be sent to @Model.Email shortly.</h4>
        </div>
        <br/>
        <div class="col-md-4 offset-md-4">
            <h4>Now you can log in and create a group, or request to join an existing one. Happy reading!</h4>
        </div>
    </div>
</div>
